<div class="max-w-sm rounded overflow-hidden shadow-lg m-5 px-25">
  <div class="px-6 py-4">
      <div class="mb-8">
  <h3>Create a New Community</h3>

  <form action="/community" method="post">
    <p>
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" class="border-2 border-grey rounded">
    </p>
    <p>
      <label for="description">Description:</label>
      <input type="text" name="description" id="description" class="border-2 border-grey rounded">
    </p>
    <p>
      <label for="users">Users:</label>
      <input type="text" name="users" id="users" class="border-2 border-grey rounded">
    </p>
    <p>
      <label for="meets">Meets:</label>
      <input type="text" name="meets" id="meets" class="border-2 border-grey rounded">
    </p>
    <p>
      <input type="submit" value="Create" class="button bg-teal rounded">
    </p>
  </form>
  </div>
</div>
</div>

