<h1>Konjo - Beautiful Communities</h1>
{{#if communities}}
    {{#each communities}}
<div class="max-w-md w-full lg:flex">
  <div class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <div class="text-black font-bold text-xl mb-2"><h3>{{ name }}</h3></div>
      <p class="text-grey-darker text-base">{{ description }}</p>
    </div>
    <div>
      <p class="text-grey-darker text-base">Members - {{ users }}</p>
    </div>
    <div class="flex items-center">
      <div class="text-md">
        <p class="text-black leading-none">Meets - {{ meets }}</p>
        <p class="text-grey-dark">{{ date }}</p>
      </div>
    </div>
  </div>
</div>
    {{/each}}
{{/if}}
